<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teacher_or_student_slide_constraint_layout">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_271sdp"
        android:layout_height="@dimen/_146sdp"
        android:layout_marginStart="2dp"
        android:src="@drawable/teacher_or_student_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:alpha=".9"
        android:fontFamily="@font/roboto_thin"
        android:text="Are you a teacher or a student ?"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_34sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/teacher_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/button_background_white_orange_ripple"
        android:fontFamily="@font/kiona_regular"
        android:text="I AM A TEACHER"
        android:onClick="iAmTeacher"
        android:textColor="@color/button_text_white_teacher"
        android:textSize="@dimen/_19sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/student_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/button_background_white_blue_ripple"

        android:fontFamily="@font/kiona_regular"
        android:text="I AM A STUDENT"
        android:textColor="@color/button_text_white_student"
        android:textSize="@dimen/_19sdp"
        android:onClick="iAmStudent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_button"
        app:layout_constraintVertical_bias="0.26999998" />

</androidx.constraintlayout.widget.ConstraintLayout>